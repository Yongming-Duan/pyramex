# PyRamEx环境变量配置模板
# 复制此文件为 .env 并修改相应值

# 应用配置
APP_NAME=PyRamEx
APP_VERSION=2.0.0
DEBUG=false
LOG_LEVEL=INFO

# 数据库配置
POSTGRES_HOST=pyramex-db
POSTGRES_PORT=5432
POSTGRES_USER=pyramex
POSTGRES_PASSWORD=pyramex123  # 请修改为强密码
POSTGRES_DB=pyramex

# Redis配置
REDIS_HOST=pyramex-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Ollama配置
OLLAMA_HOST=pyramex-ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=qwen:7b
OLLAMA_TIMEOUT=300

# GPU配置
CUDA_VISIBLE_DEVICES=0,1
GPU_MEMORY_FRACTION=0.8

# API配置
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4
MAX_UPLOAD_SIZE=1GB

# 安全配置
JWT_SECRET=your_jwt_secret_key_change_this
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# 存储配置
DATA_DIR=/data
MODEL_DIR=/models
LOG_DIR=/logs
MAX_STORAGE_SIZE=100GB

# 监控配置
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
